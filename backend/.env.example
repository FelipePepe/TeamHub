NODE_ENV=development
PORT=3001
DATABASE_URL=postgres://user:password@localhost:5432/teamhub
PG_SSL_CERT_PATH=
# Set to "false" only if you need to skip TLS verification (e.g. local DB without TLS).
PG_SSL_REJECT_UNAUTHORIZED=true
JWT_ACCESS_SECRET=change-me-change-me-change-me-change-me
JWT_REFRESH_SECRET=change-me-change-me-change-me-change-me
CORS_ORIGINS=http://localhost:3000
APP_BASE_URL=http://localhost:3000

# JWT
JWT_REFRESH_EXPIRES_IN=30d
BCRYPT_SALT_ROUNDS=12
MFA_ISSUER=TeamHub
MFA_ENCRYPTION_KEY=change-me-change-me-change-me-change-me
LOG_LEVEL=info
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100
LOGIN_RATE_LIMIT_WINDOW_MS=60000
LOGIN_RATE_LIMIT_MAX=5

# Bootstrap token for initial admin user creation (min 32 chars, optional)
# Required only when database is empty and first user needs to be created
BOOTSTRAP_TOKEN=

# Seed admin user (optional; if unset, seed is skipped)
SEED_ADMIN_EMAIL=
SEED_ADMIN_PASSWORD=
SEED_ADMIN_NOMBRE=Admin

# Sentry Error Tracking (Optional)
# Get your DSN from: https://sentry.io/settings/[org]/projects/[project]/keys/
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SEED_ADMIN_APELLIDOS=

# HMAC secret for API request signing (min 32 chars)
# Generate with: openssl rand -hex 32
API_HMAC_SECRET=change-me-change-me-change-me-change-me

# HMAC bypass for tests (NEVER use in production)
DISABLE_HMAC=false
