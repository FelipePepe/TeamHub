NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_VERSION=1.3.0

# HMAC secret for API request signing (must match backend API_HMAC_SECRET)
# Generate with: openssl rand -hex 32
NEXT_PUBLIC_API_HMAC_SECRET=change-me-change-me-change-me-change-me

# Sentry Error Tracking (Optional)
# Get your DSN from: https://sentry.io/settings/[org]/projects/[project]/keys/
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_SENTRY_ENVIRONMENT=development
